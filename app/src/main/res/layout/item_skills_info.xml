<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id = "@+id/ll_skills"
    android:background="?selectableItemBackground"
    tools:background="@color/default_dialog_color"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_skill_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text = "skill name"/>

    <TextView
        android:id="@+id/tv_skill_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text= "skill type"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_skill_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="skill cost"
        android:layout_marginTop="5dp"/>
</LinearLayout>