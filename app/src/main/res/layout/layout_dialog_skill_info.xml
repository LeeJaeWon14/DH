<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_skill_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Skill name"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_skill_info_max_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "max level"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_skill_consume_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="consume item"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_skill_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="description"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_skill_info_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_name_close"
        android:layout_marginTop="10dp" />
</LinearLayout>