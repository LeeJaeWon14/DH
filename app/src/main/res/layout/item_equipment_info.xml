<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:clickable="true"
    android:background="?selectableItemBackground"
    android:id="@+id/ll_avatar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/iv_equip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src = "@drawable/equip_test"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            tools:text="Item name is here" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_clone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_clone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src = "@drawable/equip_test"/>

        <TextView
            android:id="@+id/tv_clone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            tools:text="Item name is here" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src = "@drawable/equip_test"/>

        <TextView
            android:id="@+id/tv_random_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            tools:text="Item name is here" />
    </LinearLayout>



</LinearLayout>